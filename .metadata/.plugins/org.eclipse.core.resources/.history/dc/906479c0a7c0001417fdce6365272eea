#ifndef REGDFA_H_
#define REGDFA_H_
#include <string>

using namespace std;

class RegDFA {
public:
	RegDFA();
	struct State;
	virtual ~RegDFA();
	void fileParser();
	void toNFA(string Postfix);
	void charTransition(char c);
	Vertex* createStart();
	Vertex* createFinal();
private:

};

template <class T1, class T2> struct pair;

template <class T1,class T2>
  pair<T1,T2> make_pair (T1 x, T2 y)
  {
    return ( pair<T1,T2>(x,y) );
  }

#endif /* REGDFA_H_ */
