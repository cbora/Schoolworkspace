#ifndef VERTEX_H_
#define VERTEX_H_
#include <string>

using namespace std;

struct State{
	int stateId;
	bool finalState;
};


class Edge{
private:
	char weight;
public:
	State vertexTo;
	//CONSTRUCTOR
	Edge(State vertexTo, char weight);

	//GETTER METHODS maybe a set
	State returnVertex(){
		return vertexTo;
	}
	char returnWeight(){
		return weight;
	}
};

class Vertex{
	State thisState;
	Edge *out;
};



struct graph{

	//list of stateNotes
	//Space is required between angled brackets
	std::vector< std::vector<Vertex> > adjacencies;
	//adjacencies[this].push_back(Edge(vertexFrom,vertexTo, weight))
};

#endif /* VERTEX_H_ */
